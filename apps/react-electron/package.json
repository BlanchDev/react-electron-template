{
  "name": "@app/react-electron",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist/electron/main.js",
  "author": "blanch.dev",
  "description": "React Electron Typescript Starter",
  "scripts": {
    "dev": "concurrently -k \"bun run dev:vite\" \"bun run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on tcp:5173 && bun run build:electron && bun run scripts/start-electron.ts",
    "postinstall": "electron-builder install-app-deps",
    "build": "vite build && bun run build:electron && bun run scripts/prepare-dist.ts && electron-builder --projectDir dist/electron-release/temp_build --config electron-builder.config.cjs",
    "build:electron": "bun run build:main && bun run build:preload",
    "build:main": "bun build ./electron/main.ts --outfile=./dist/electron/main.js --target=node --external electron --external better-sqlite3",
    "build:preload": "bun build ./electron/preload.ts --outfile=./dist/electron/preload.cjs --target=node --format=cjs --external electron"
  },
  "dependencies": {
    "@elysiajs/eden": "^1.4.6",
    "better-sqlite3": "^12.6.2",
    "drizzle-orm": "^0.45.1",
    "elysia": "^1.4.22",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-router-dom": "7.12.0"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "25.0.6",
    "@types/react": "19.2.8",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.2",
    "bun-types": "^1.3.6",
    "cross-env": "10.1.0",
    "drizzle-kit": "^0.31.8",
    "electron": "39.2.7",
    "electron-builder": "26.4.0",
    "eslint": "9.39.2",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-react-refresh": "0.4.26",
    "globals": "17.0.0",
    "sass": "1.97.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.53.0",
    "vite": "7.3.1",
    "vite-tsconfig-paths": "^6.0.5",
    "wait-on": "^9.0.3"
  },
  "trustedDependencies": [
    "@parcel/watcher",
    "electron",
    "electron-builder"
  ]
}
