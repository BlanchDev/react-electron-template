{
  "name": "react-electron-template",
  "appId": "com.react-electron-template.desktop",
  "productName": "React & Electron template",
  "description": "A desktop & web application template developed using React and Electron for developers.",
  "author": "blanch.dev",
  "version": "1.0.0",
  "license": "MIT",
  "private": false,
  "type": "module",
  "main": "src/electron/main.js",
  "scripts": {
    "dev:react": "bunx --bun vite --host --port 5173",
    "build:react": "rm -rf dist-react && bunx --bun vite build",
    "lint": "bunx --bun eslint .",
    "preview": "bunx --bun vite preview",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "dev:all": "concurrently \"bun dev:react\" \"bun wait-port 5173 && bun run dev:electron\"",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild -f -w @parcel/watcher",
    "build:win": "rm -rf dist-electron && bun run build:react && electron-builder --win --config.asar=true --config electron-builder.json",
    "build:mac": "rm -rf dist-electron && bun run build:react && electron-builder --mac --config.asar=true --config electron-builder.json --config.compression=maximum"
  },
  "dependencies": {
    "concurrently": "^9.1.2",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.3",
    "sass": "^1.83.4",
    "wait-port": "^1.1.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.25.9",
    "@eslint/js": "^9.18.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-legacy": "^6.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.6",
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3",
    "eslint": "^9.18.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "terser": "^5.37.0",
    "vite": "^6.0.11"
  },
  "trustedDependencies": [
    "@parcel/watcher",
    "core-js",
    "electron",
    "esbuild"
  ]
}
