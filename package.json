{
  "name": "react-electron-template",
  "appId": "com.react-electron-template.desktop",
  "productName": "React & Electron template",
  "description": "A desktop & web application template developed using React and Electron for developers.",
  "author": "blanch.dev",
  "version": "1.0.0",
  "license": "MIT",
  "private": false,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev:react": "bunx --bun vite --host --port 5173",
    "build:react": "bunx --bun vite build",
    "lint": "bunx --bun eslint .",
    "preview": "bunx --bun vite preview",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "dev:all": "concurrently \"bun dev:react\" \"bun wait-port 5173 && bun run dev:electron\"",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild -f -w @parcel/watcher",
    "build:win": "rm -rf dist-electron && bun run build:react && electron-builder --win --config.asar=true",
    "build:mac": "rm -rf dist-electron && bun run build:react && electron-builder --mac --config.asar=true --config.compression=maximum"
  },
  "dependencies": {
    "concurrently": "^9.1.2",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.1",
    "sass": "^1.83.4",
    "wait-port": "^1.1.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.25.9",
    "@eslint/js": "^9.18.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-legacy": "^6.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.6",
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3",
    "eslint": "^9.18.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "terser": "^5.37.0",
    "vite": "^6.0.7"
  },
  "trustedDependencies": [
    "@parcel/watcher",
    "core-js",
    "electron",
    "esbuild"
  ],
  "build": {
    "appId": "com.react-electron-template.desktop",
    "productName": "React & Electron template",
    "description": "A desktop & web application template developed using React and Electron for developers.",
    "directories": {
      "output": "dist-electron",
      "buildResources": "electron/assets"
    },
    "asar": true,
    "compression": "maximum",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "icon": "electron/assets/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "React & Electron template",
      "installerIcon": "electron/assets/logo.ico",
      "uninstallerIcon": "electron/assets/logo.ico",
      "allowElevation": true,
      "runAfterFinish": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "electron/assets/logo.png",
      "category": "public.app-category.productivity",
      "darkModeSupport": true,
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "extendInfo": {
        "LSMinimumSystemVersion": "10.15.0",
        "NSHighResolutionCapable": true,
        "NSRequiresAquaSystemAppearance": false
      }
    },
    "dmg": {
      "icon": "electron/assets/logo.png",
      "iconSize": 100,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 400
      },
      "backgroundColor": "#141414",
      "title": "${productName}"
    },
    "extraResources": [
      {
        "from": "electron/assets/",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "your-github-username",
      "repo": "react-electron-template",
      "private": false,
      "releaseType": "release"
    }
  }
}
