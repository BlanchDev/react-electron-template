{
  "name": "react-electron-template",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "author": "blanch.dev",
  "description": "Electron React Typescript Starter",
  "scripts": {
    "dev": "concurrently -k \"bun run dev:vite\" \"bun run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "bun run build:electron && wait-on tcp:5173 && electron .",
    "build": "vite build && bun run build:electron && electron-builder",
    "build:electron": "bun run build:main && bun run build:preload",
    "build:main": "bun build ./electron/main.ts --outfile=./dist-electron/main.js --target=node --external electron --external electron-store",
    "build:preload": "bun build ./electron/preload.ts --outfile=./dist-electron/preload.js --target=node --external electron"
  },
  "dependencies": {
    "electron-store": "11.0.2",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-router-dom": "7.9.6"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@types/node": "24.10.1",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.1",
    "cross-env": "10.1.0",
    "electron": "39.2.4",
    "electron-builder": "26.0.12",
    "eslint": "9.39.1",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-react-refresh": "0.4.24",
    "globals": "16.5.0",
    "sass": "1.94.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.0",
    "vite": "7.2.4",
    "vite-plugin-electron": "0.29.0",
    "vite-plugin-electron-renderer": "0.14.6"
  },
  "build": {
    "appId": "com.emir.counterapp",
    "productName": "Emir Counter App",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
